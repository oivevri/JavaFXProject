<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<BorderPane prefHeight="500.0" prefWidth="300.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets topRightBottomLeft="10" />
	</padding>
	<top>
		<AnchorPane BorderPane.alignment="CENTER">
			<children>
				<ImageView id="imageView" fitHeight="290.0"
					fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
					AnchorPane.topAnchor="0.0" />
				<Button id="btnSelect" layoutX="109.0" layoutY="303.0"
					text="이미지 불러오기" />
			</children>
		</AnchorPane>
	</top>

	<bottom>
		<HBox alignment="CENTER" prefHeight="10" prefWidth="400.0"
			spacing="20">
			<BorderPane.margin>

			</BorderPane.margin>
			<children>
				<Button id="btnFormAdd" text="등록" />
				<Button id="btnFormClose" text="창닫기" />
			</children>
		</HBox>
	</bottom>
	<center>
		<GridPane alignment="CENTER" hgap="5.0" prefHeight="100.0"
			prefWidth="300.0" vgap="5.0" BorderPane.alignment="CENTER">
			<children>
				<Label prefWidth="100" text="날짜" GridPane.columnIndex="0"
					GridPane.rowIndex="0" />
				<Label prefWidth="100" text="영화제목" textAlignment="CENTER"
					GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<Label prefWidth="100" text="평점" textAlignment="CENTER"
					GridPane.rowIndex="2" />
				<Label prefWidth="100" text="한줄평" GridPane.columnIndex="0"
					GridPane.rowIndex="3" />
				<TextField id="txtName" prefWidth="200"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<TextField id="txtComment" prefWidth="350"
					GridPane.columnIndex="1" GridPane.rowIndex="3" />
				<DatePicker id="txtDate" prefHeight="23.0"
					prefWidth="196.0" promptText="날짜를 선택하세요" GridPane.columnIndex="1" />
				<ComboBox id="txtRank" prefHeight="23.0" prefWidth="78.0"
					GridPane.columnIndex="1" GridPane.rowIndex="2" />
			</children>
			<columnConstraints>
				<ColumnConstraints maxWidth="77.0" minWidth="25.0"
					prefWidth="59.0" />
				<ColumnConstraints maxWidth="265.0"
					minWidth="192.0" prefWidth="196.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
				<RowConstraints />
			</rowConstraints>
		</GridPane>
	</center>
</BorderPane>
